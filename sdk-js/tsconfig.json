{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "isolatedModules": false, // turn this off unless needed
    "skipLibCheck": true, // optional but can prevent unnecessary type errors
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"]
}
